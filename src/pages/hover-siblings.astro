---
import DefaultLayout from '../layouts/DefaultLayout.astro';
---
<DefaultLayout>
  <h1>Hover Effect on Siblings </h1>

  <div class="container">
    <div class="item"> 1</div>
    <div class="item"> 2</div>
    <div class="item"> 3</div>
    <div class="item"> 4</div>
  </div>

</DefaultLayout>

<style>
  .container {
    display: flex;
    flex-direction: row;
  }
  .container:hover > :not(:hover){
    opacity: 0.4;
    background: green;
  }

  .item {
    transition: .4s;
    width: 50px;
    height: 50px;
    background: red;
    margin-left: 10px;
    cursor: pointer;
  }

</style>
